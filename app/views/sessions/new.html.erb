

<div class="row">
    <div class="col-md-6 col-md-offset-3">
    <h1>Log in</h1>
    <%= form_with(url: login_path, scope: :session, local: true, class: "user_form") do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'input_field' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'input_field' %>

        <%= f.submit "Log in", class: "submit_btn" %>
    <% end %>

    <p> New user? <%= link_to "Sign up now!", signup_path %> </p>
    </div>
</div>