

<div class="row">
    
    <div class="col-md-6 col-md-offset-3">
        <h1 class="form_header">Sign up</h1>
        <%= form_with(model: @user, local: true , class: "user_form" )   do |f|  %>
            <div class="form_group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "input_field" %>

            <%= f.label :email %>
            <%= f.email_field :email, class: "input_field" %>
            </div>

            <div class="form_group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "input_field" %>

            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, class: "input_field" %>
            </div>


            <%= f.submit "Create my account", class: "submit_btn" %>
        <% end %>
    </div>
</div>
